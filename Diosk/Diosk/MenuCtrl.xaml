<UserControl x:Class="Diosk.MenuCtrl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Diosk"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Style x:Key="TitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="15"></Setter>
            <Setter Property="FontWeight" Value="Bold"></Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Image x:Name="MenuImage" Stretch="UniformToFill"></Image>
        <StackPanel>
            <TextBlock x:Name="tbName" Style="{StaticResource TitleStyle}" TextTrimming="CharacterEllipsis"></TextBlock>
            <TextBlock x:Name="tbCount"></TextBlock>
            <TextBlock x:Name="tbPrice"></TextBlock>
        </StackPanel>
    </Grid>
    
    
</UserControl>
