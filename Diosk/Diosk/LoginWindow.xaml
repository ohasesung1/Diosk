<UserControl x:Class="Diosk.LoginWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Diosk"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="450">
    <UserControl.Resources>
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#F12243"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="28"/>
        </Style>
    </UserControl.Resources>
    <Grid Background="#fefce7">
        <Label x:Name="logoutTime" FontSize="14">최종접속시간 표시</Label>
        <Image Source="/Image/LoadingLogo.jpg" VerticalAlignment="Top" Width="200"/>
        <TextBox x:Name="id" Width="320" Height="80" FontSize="28"></TextBox>
        <Button Width="320" Height="80" Margin="0,200,0,0" Style="{StaticResource ButtonStyle}" Click="LoginButton_Click">로그인</Button>
    </Grid>
</UserControl>