<UserControl x:Class="Diosk.TotalWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Diosk"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="450">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="600"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <ListView x:Name="totalList" Background="#fefce7">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="분류"></GridViewColumn>
                        <GridViewColumn Header="수량"></GridViewColumn>
                        <GridViewColumn Header="금액"></GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
        </Grid>
        <Grid Grid.Row="1">
            <Border Background="White"></Border>
            <Border Background="#F12243" Height="8" VerticalAlignment="Top"/>
            <TextBlock x:Name="totalPrice" FontSize="30" VerticalAlignment="Center" Margin="60, 0, 60, 0">총 매출 액:</TextBlock>
        </Grid>
    </Grid>
</UserControl>
