<UserControl x:Class="Diosk.OrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Diosk"
        mc:Ignorable="d"
        Height="800" Width="450"
        d:DesignHeight="800" d:DesignWidth="450">
    <UserControl.Resources>
        <Style x:Key="TitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="15"></Setter>
            <Setter Property="FontWeight" Value="Bold"></Setter>
        </Style>
    </UserControl.Resources>
    <Grid Background="White" Height="800" Width="450">
        <Grid.RowDefinitions>
            <RowDefinition Height="500"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <ListView x:Name="lvMenu" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" ItemHeight="100" ItemWidth="140"></WrapPanel>
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Image Source="{Binding ImagePath}" Stretch="UniformToFill"></Image>
                            <StackPanel>
                                <TextBlock Text="{Binding Name}" Style="{StaticResource TitleStyle}" TextTrimming="CharacterEllipsis"></TextBlock>
                                <TextBlock Text="{Binding Price}" Style="{StaticResource TitleStyle}" ></TextBlock>
                                <Button Click="AddOrderMenu"></Button>
                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>
        
        <Grid Grid.Row="1">
            <ListView x:Name="lvOrder" Width="250" Height="250" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="0,0,0,10">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Name" Width="130" DisplayMemberBinding="{Binding Name}"></GridViewColumn>

                        <GridViewColumn Header="" Width="40">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Width="20" Height="20" Content="-" Click="SubtractOrderCount"></Button>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn Header="Count" Width="40" DisplayMemberBinding="{Binding Count}"></GridViewColumn>

                        <GridViewColumn Header="" Width="40">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Width="20" Height="20" Content="+" Click="AddOrderCount"></Button>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
        </Grid>
        
    </Grid>
</UserControl>
